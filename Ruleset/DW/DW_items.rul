    sprayWaypoints: 2
    autoRange: 14 #
    snapRange: 18 # regular 18
    aimRange: 15 # regular 15
    accuracyAuto: 50 #
    accuracySnap: 66 # regular 60
    accuracyAimed: 58 # regular 50
