  - type: STR_DW_QUARTERS_SW
    refNode: *DW_QUARTERS
  - type: STR_DW_QUARTERS_DA
    refNode: *DW_QUARTERS
  - type: STR_DW_QUARTERS_CF
    refNode: *DW_QUARTERS
  - type: STR_DW_QUARTERS
    refNode: *DW_QUARTERS

