    refNode: *OUTPOST_TRAINING

  - type: STR_OUTPOST # Arbites
    refNode: *OUTPOST_TRAINING

  - type: STR_OUTPOST_ARBITES_HYPER
    refNode: *OUTPOST_TRAINING

  - type: STR_OUTPOST_ADEPTAS
    refNode: *OUTPOST_TRAINING

  - type: STR_OUTPOST_ADEPTAS_HYPER
    refNode: *OUTPOST_TRAINING

