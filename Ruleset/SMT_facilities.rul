    buildCost: 1250000
    crafts: 1
    buildTime: 15
    monthlyCost: 650000
    personnel: 50
    trainingRooms: 20
    rightClickActionType: 4 # training menu
    storage: 100
    mapName: XBASE_60
    storageTiles:
            - [24, 6, 1]
            - [25, 6, 1]
            - [27, 6, 1]
            - [22, 4, 1]
            - [34, 10, 1]
            - [28, 3, 1]
            - [27, 3, 2]
