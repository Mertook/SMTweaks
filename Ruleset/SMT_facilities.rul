        terrain: baseTerrain
        groups: [13]
        size: [4, 4, 0]
      - type: middle
        blocks: [60]
        size: [4, 4, 1]
      - type: ceiling
        size: [4, 4, 3]
        terrain: XIP4X4
        blocks: [0]
