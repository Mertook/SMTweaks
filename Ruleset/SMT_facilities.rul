    rightClickActionType: 4 # training menu

  - type: STR_GUARD_BARRACKS
    rightClickActionType: 4 # training menu

  - type: STR_TEC_BAY
    workshops: 25 # was 10
    provideBaseFunc: [TEC, MANU] # counts as a workshop
    rightClickActionType: 2 # manufacturing menu

  - type: STR_ARMORY
    storage: 75 # was 25 - general stores is 100

  - type: STR_STEELMILL
    rightClickActionType: 2 # manufacturing menu

  - type: STR_APOC_BAY
