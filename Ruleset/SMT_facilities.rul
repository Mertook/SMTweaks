    requiresBaseFunc: [OUTP]
    provideBaseFunc: [OUTP_UPGRADE, HANGAR, IMPERIUM]
    connectorsDisabled: true
    spriteShape:  {mod: 40k_ROSIGMA_edits, index: 700}
#    spriteFacility: 700
